{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "C:/msys64/ucrt64/bin/gcc.exe",
            "args": [
                "-Wall",
                "-Wextra",
                "-g3",
                "-fsanitize=address",
                "-fsanitize=undefined",
                "${fileDirname}\\01.c",
                "${fileDirname}\\base.c",
                "-o",
                "${fileDirname}\\output\\01.exe"
            ],
            "options": {
                "shell": {
                    "executable": "powershell.exe",
                    "args": ["-Command"]
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Run",
            "type": "shell",
            "command": "${fileDirname}\\output\\01.exe",
            "dependsOn": [],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Build and Run",
            "dependsOn": ["Build", "Run"],
            "dependsOrder": "sequence",
            "group": {
                "kind": "test",
                "isDefault": false
            }
        }
    ]
}
